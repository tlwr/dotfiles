[hub]
  protocol = ssh

[alias]
  b = branch
  c = commit
  co = checkout

  cb = current-branch
  cp = cherry-pick
  cpc = cherry-pick --continue
  cpa = cherry-pick --abort

  d = diff
  ds = diff --staged
  lo = log --oneline
  pl = pull
  plo = pull origin
  p = push
  po = push origin

  r = root
  rb = rebase --allow-empty-message -i
  rbc = rebase --continue
  rba = rebase --abort
  rbs = rebase --skip

  s = status

  pls = commit -svp
  amen = commit -svp --amend

[user]
  name = toby lorne
  email = toby@toby.codes

[pull]
  rebase = true

[init]
  defaultBranch = main

[includeIf "gitdir:~/git_tree/"]
  path = ~/.gitconfig_b

[push]
	default = current

[url "git@gitlab.booking.com:"]
  insteadOf = https://gitlab.booking.com/
