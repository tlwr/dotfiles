#!/usr/bin/env bash

set -euo pipefail

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

if ! command -v brew > /dev/null 2>&1; then
	echo "Please install homebrew"
	exit 1
fi

(
  cd "$DIR/.."
  brew bundle
)

if ! command -v stow > /dev/null 2>&1; then
  echo "Please install stow"
  exit 1
fi

STOW_SRC="$DIR/../stow"
STOW_DST="$HOME"
stow="stow -d $STOW_SRC -t $STOW_DST"

$stow git
$stow vim
$stow neovim

$stow scripts
